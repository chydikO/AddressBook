<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chudik0.addressbook.controllers.MainController">

    <HBox maxHeight="50.0" prefHeight="100.0">
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#actionButtonPressed" text="Add">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="editButton" mnemonicParsing="false" onAction="#actionButtonPressed" text="Edit">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#actionButtonPressed" text="Delete">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </HBox.margin>
        </Button>
    </HBox>
    <AnchorPane maxHeight="30.0" prefHeight="100.0">
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
        <TextField fx:id="textField" prefHeight="31.0" prefWidth="293.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="80.0" />
        <Button fx:id="searchButton" layoutX="266.0" mnemonicParsing="false" text="Search" AnchorPane.rightAnchor="0.0" />
    </AnchorPane>
    <AnchorPane prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
        <TableView fx:id="tableViewAddressBook" prefHeight="400.0" prefWidth="357.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columns>
                <TableColumn fx:id="columnFio" minWidth="100.0" text="Name" />
                <TableColumn fx:id="columnPhone" minWidth="100.0" prefWidth="-1.0" text="Phone" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </AnchorPane>
    <AnchorPane prefHeight="30.0" prefWidth="200.0">
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
        <Label fx:id="labelCount" text="Counter records:" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
    </AnchorPane>
</VBox>
